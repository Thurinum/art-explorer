<UserControl x:Class="TaggedImageViewer.Components.DirectoryPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal">
        <TextBox Width="300" Margin="5" IsReadOnly="True" 
                 Text="{Binding PickedDirectory, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <Button Content="Select folder..." Click="OnPickDirectory" Margin="5" />
    </StackPanel>
</UserControl>
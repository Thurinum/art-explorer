<Window x:Class="TaggedImageViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:TaggedImageViewer.ViewModels"
        xmlns:components="clr-namespace:TaggedImageViewer.Components"
        mc:Ignorable="d"
        Title="Drawings Browser" Width="1920" Height="1080">
    
    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>
    
    <Window.Resources>
        <CollectionViewSource x:Key="GroupedDrawings" Source="{Binding Drawings}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Type"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
        
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        
        <Style x:Key="SpinnerStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Fill" Value="Transparent"/>
            <Setter Property="Stroke" Value="Gray"/>
            <Setter Property="StrokeThickness" Value="10"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <RotateTransform/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Ellipse.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" 
                                From="0" To="360" 
                                Duration="0:0:1" 
                                RepeatBehavior="Forever"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
        
        <components:DirectoryPicker x:Key="DirectoryPicker" />
    </Window.Resources>
    
    <Grid Name="MainLayout">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" /> 
            <ColumnDefinition Width="5"/> 
            <ColumnDefinition Width="Auto"/> 
            <ColumnDefinition Width="5"/> 
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <Menu Grid.Row="0" Grid.ColumnSpan="5">
            <MenuItem Header="Developer">
                <MenuItem Header="Delete thumbnails cache" Click="DeleteThumbnailsCache" />
            </MenuItem>
            <components:DirectoryPicker PickedDirectory="{Binding RootDirectory}" PickedDirectoryChanged="DirectoryPicker_OnPickedDirectoryChanged"></components:DirectoryPicker>
        </Menu>
        
        <ListView Grid.Row="1" Grid.Column="0" Name="DirectoryListBox" HorizontalAlignment="Stretch"
                  ItemsSource="{Binding Collections}" 
                  SelectionChanged="OnSelectDirectory" >
            <ListView.ItemsPanel> 
                <ItemsPanelTemplate>
                     <UniformGrid Columns="3" HorizontalAlignment="Stretch" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="100">
                        <Image Source="{Binding Thumbnail}" Width="100" Height="100" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding DisplayName}" HorizontalAlignment="Center" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <GridSplitter Grid.Row="1" Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Gray" />
        
        <ListView Grid.Row="1" Grid.Column="2" ItemsSource="{Binding Source={StaticResource GroupedDrawings}}" 
                  SelectionChanged="OnSelectFile"
                  MouseDoubleClick="OnOpenWithAssociatedApp">
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" Margin="5"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
            <ListView.ItemsPanel> 
                <ItemsPanelTemplate>
                    <UniformGrid Columns="5" HorizontalAlignment="Stretch" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="75">
                            <Image Source="{Binding Thumbnail}" Width="75" Height="100" HorizontalAlignment="Center" />
                            <TextBlock Text="{Binding DisplayName}" HorizontalAlignment="Center" 
                                       TextWrapping="Wrap" TextAlignment="Center" />
                        </StackPanel>
                        <Ellipse Style="{StaticResource SpinnerStyle}" Visibility="{Binding IsLoadingThumbnail, Converter={StaticResource BoolToVisibility}}">
                            <Ellipse.Stroke>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="Gray" Offset="0.0"/>
                                    <GradientStop Color="Transparent" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Ellipse.Stroke>
                        </Ellipse>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="KeyboardNavigation.TabNavigation" Value="Once"/>
                    <Setter Property="KeyboardNavigation.DirectionalNavigation" Value="Cycle"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        
        <GridSplitter Grid.Row="1" Grid.Column="3" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Gray" />

        <Grid Grid.Row="1" Grid.Column="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                MouseWheel="OnImageZoom"
                MouseDown="OnImageDragStart"
                MouseUp="OnImageDragEnd"
                MouseMove="OnImageDrag"
                MouseRightButtonDown="OnEnableCompare"
                MouseRightButtonUp="OnDisableCompare"
                ClipToBounds="True"
                Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0" Name="ImageViewer">
                <Image Source="{Binding SelectedDrawing.Thumbnail}" />
                <Image Visibility="{Binding ShowSecondImage}" 
                       Source="{Binding SelectedDrawing2.Thumbnail}" />
            </Grid>
            <Border Grid.Row="1" Margin="0,10,0,0" Padding="16,8,16,8" 
                    Background="#ddcccccc" CornerRadius="8,8,0,0" HorizontalAlignment="Center"
                    MouseLeftButtonUp="OnShowDrawingDetails">
                <!-- absolute cancer -->
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedDrawing}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock FontSize="16" Text="{Binding SelectedDrawing.DisplayName}" />
            </Border>
        </Grid>
        
        <ProgressBar Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" Minimum="0" Value="{Binding Progress}" Maximum="{Binding ProgressMax}" Height="10" />
    </Grid>
</Window>